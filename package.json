{
  "name": "gemini-ssalmuk",
  "version": "1.0.0",
  "description": "Gemini coding agent with Electron GUI",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --dir",
    "dist:win:installer": "npm run build && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.gemini-ssalmuk.app",
    "productName": "Gemini 코딩 에이전트",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "preload/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["dir", "portable", "nsis"],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "forceCodeSigning": false
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.0.0",
    "dotenv": "^16.4.5",
    "electron-store": "^8.1.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0"
  }
}
