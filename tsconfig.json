{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "config/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "main/**/*.ts",
    "preload/**/*.ts",
    "renderer/**/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
